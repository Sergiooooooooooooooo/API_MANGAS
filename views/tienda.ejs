<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mangas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>    
    <div class="container">
        <div class="row">
            <div class="col-12 alert alert-success"> 
                <h1 class="text-center">Manga Store</h1>
            </div>
            <!-- Manga Cards -->
            <div class="row">
                <div>  
                    <li><a href="/carrito">carrito</a></li>
                </div>
              <% mangas.forEach(manga => { %>
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="/images/<%= manga.imagen %>" alt="<%= manga.titulo %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= manga.titulo %></h5>
                            <p class="card-text">$<%= manga.precio %></p>
                            <div class="d-flex justify-content-between">
                                <form action="/carrito" method="POST">
                                    <input type="hidden" name="id" value="<%= manga.id %>">
                                    <input type="hidden" name="titulo" value="<%= manga.titulo %>">
                                    <input type="hidden" name="precio" value="<%= manga.precio %>">
                                    <input type="hidden" name="imagen" value="<%= manga.imagen %>">
                                    <button type="submit">Agregar al carrito</button>
                                </form>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
              <% }) %>
            </div>
                    </div>
                  </form>  
                </div>
              </div>
            </div>
        </div>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
